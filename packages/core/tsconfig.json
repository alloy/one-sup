{
  "extends": "@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "exclude": ["**/__tests__/*.test.ts", "./dist"],
}
